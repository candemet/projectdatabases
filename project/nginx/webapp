server {
    listen 80;
    server_name 0.0.0.0 team[x].ua-ppdb.me;

    # Frontend (Vite build output)
    root /home/app/projectdatabases/project/frontend/dist;
    index index.html;

    # API -> Flask (Gunicorn via unix socket)
    location /api/ {
        include proxy_params;
        proxy_pass http://unix:/home/app/projectdatabases/project/backend/webapp.sock:;
    }

    # SPA fallback
    location / {
        try_files $uri /index.html;
    }
}
